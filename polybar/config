[bar/bartype]
override-redirect = true
wm-restack = i3
height = 32
offset-y = 8
radius = 16
line-size = 0 
font-0 = "Iosevka:size=12:style=Bold Italic;3"
module-margin = 1

[bar/i3bar]
inherit = bar/bartype
width = 6%
offset-x = 16
modules-center = i3

[bar/centerbar]
inherit = bar/bartype
width = 40%
offset-x = 30%:+16
modules-center = temperature cpuload memory filesystem wifi battery backlight volume

[bar/traybar]
inherit = bar/bartype
width = 14%
offset-x = 86%:-16
modules-center = layout tray time date 


[module/date]
type = internal/date
date = %d.%m

[module/time]
type = internal/date
date = %H:%M:%S

[module/i3]
type = internal/i3
show-urgent = true
enable-scroll = false

[module/tray]
type = internal/tray
format = <tray>

[module/cpuload]
type = internal/cpu
interval = 1
warn-percentage = 80

[module/battery]
type = internal/battery
full-at = 100
low-at = 20
battery = BAT0
adapter = AC
poll-interval = 30

[module/volume]
type = internal/pulseaudio
use-ui-max = true
interval = 3

[module/backlight]
type = internal/backlight
card = amdgpu_bl0
enable-scroll = true

[module/memory]
type = internal/memory
interval = 1
warn-percentage = 80

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
interval=30

[module/wifi]
type = internal/network
interface = wlp3s0

[module/temperature]
type = internal/temperature
interval = 0.5
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon4/temp1_input

[module/layout]
type = internal/xkeyboard
